{
  "name": "basic-chat",
  "version": "0.0.1",
  "description": "Basic Chat",
  "main": "bin.js",
  "pear": {
    "type": "terminal",
    "stage": {
      "ignore": [
        ".git",
        ".github",
        ".gitignore",
        "coverage",
        "storage",
        "tmp",
        "README.md",
        "schema.js",
        "test.js"
      ]
    }
  },
  "scripts": {
    "build": "node schema.js",
    "test": "brittle -c test.js",
    "test:bare": "brittle-bare -c test.js",
    "start": "node bin",
    "start:bare": "bare bin",
    "start:pear": "pear run bin"
  },
  "dependencies": {
    "autobase": "^7.24.0",
    "b4a": "^1.7.3",
    "bare-fs": "^4.5.2",
    "bare-path": "^3.0.0",
    "bare-process": "^4.2.2",
    "bare-readline": "^1.2.0",
    "blind-pairing": "^2.3.1",
    "corestore": "^7.7.0",
    "graceful-goodbye": "^1.3.3",
    "hyperdb": "^4.19.1",
    "hyperdispatch": "^1.4.4",
    "hyperschema": "^1.17.1",
    "hyperswarm": "^4.16.0",
    "paparam": "^1.9.1",
    "ready-resource": "^1.2.0",
    "which-runtime": "^1.3.2",
    "z32": "^1.1.0"
  },
  "devDependencies": {
    "brittle": "^3.19.1",
    "hyperdht": "^6.27.1"
  },
  "imports": {
    "fs": {
      "bare": "bare-fs",
      "default": "fs"
    },
    "path": {
      "bare": "bare-path",
      "default": "path"
    },
    "process": {
      "bare": "bare-process",
      "default": "process"
    },
    "readline": {
      "bare": "bare-readline",
      "default": "readline"
    }
  }
}
